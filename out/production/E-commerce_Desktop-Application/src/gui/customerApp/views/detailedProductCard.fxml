<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="src.gui.customerApp.controllers.ProductController">
   <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="447.0"
               prefWidth="686.0" styleClass="product-detail-container">
      <top>
         <HBox alignment="CENTER" prefHeight="51.0" prefWidth="686.0" styleClass="product-header"
               BorderPane.alignment="CENTER">
            <Label fx:id="lblProductName" alignment="CENTER" prefHeight="51.0" prefWidth="691.0" text="Product Name"
                   wrapText="true" styleClass="product-title">
               <font>
                  <Font size="20.0"/>
               </font>
            </Label>
         </HBox>
      </top>

      <right>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" spacing="15.0" styleClass="product-info-sidebar"
               BorderPane.alignment="CENTER">
            <padding>
               <Insets left="10.0" right="10.0"/>
            </padding>
            <Label fx:id="lblProductCategory" alignment="CENTER" prefHeight="83.0" prefWidth="130.0" text="Category"
                   styleClass="product-info-label">
               <font>
                  <Font size="18.0"/>
               </font>
            </Label>
            <Label fx:id="lblProductPrice" alignment="CENTER" prefHeight="73.0" prefWidth="130.0" text="\$ 0.00"
                   styleClass="product-price-label">
               <font>
                  <Font size="20.0"/>
               </font>
            </Label>
            <Label fx:id="lblProductStock" alignment="CENTER" prefHeight="67.0" prefWidth="130.0" text="In Stock"
                   styleClass="product-stock-label">
               <font>
                  <Font size="18.0"/>
               </font>
            </Label>
         </VBox>
      </right>

      <center>
         <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
               <Insets bottom="15.0" left="16.0" right="15.0" top="15.0"/>
            </padding>
            <ImageView fx:id="imgProductDetail" fitHeight="249.0" fitWidth="412.0" pickOnBounds="true"
                       preserveRatio="true" styleClass="product-image">
               <Image url="@../../utils/icon/java.png"/>
            </ImageView>
            <Label fx:id="lblProductDescription" prefHeight="100.0" prefWidth="562.0" text="Product Description"
                   wrapText="true" styleClass="product-description">
               <font>
                  <Font size="14.0"/>
               </font>
            </Label>
         </VBox>
      </center>

      <bottom>
         <HBox alignment="CENTER" prefHeight="49.0" prefWidth="686.0" spacing="15.0" styleClass="product-actions"
               BorderPane.alignment="CENTER">
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#back" prefHeight="39.0" prefWidth="85.0"
                    text="Back" styleClass="btn-secondary"/>

            <Button fx:id="btnAddToInterests" mnemonicParsing="false" onAction="#addToInterests" prefHeight="39.0"
                    prefWidth="50.0" styleClass="btn-favorite">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@../../utils/icon/favorite.png"/>
                  </ImageView>
               </graphic>
            </Button>

            <Spinner fx:id="spinnerQuantity" prefHeight="33.0" prefWidth="67.0"/>

            <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#addToCart" prefHeight="38.0"
                    prefWidth="120.0" text="Add to Cart" styleClass="btn-primary"/>
         </HBox>
      </bottom>
   </BorderPane>
</AnchorPane>